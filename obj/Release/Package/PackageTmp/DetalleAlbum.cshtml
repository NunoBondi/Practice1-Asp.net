@{
    Layout = null;
    int id = int.Parse(Request["id"]);
    Tarea1.Album Model = Tarea1.Global.Albumes.Where(x => x.Id == id).FirstOrDefault();
}

@RenderPage("Index.cshtml");

<h2>@Model.Nombre - @Tarea1.Global.Albumes.Where(x => x.Id == id).Count() Album</h2>

<table class="table">
    <tr>
        <th>Nombre</th>
    </tr>

    @foreach (var item in Tarea1.Global.Albumes.Where(x => x.Id == id))
    {
        <tr>
            <td>
                 @item.Nombre
            </td>
        </tr>
    };
</table>