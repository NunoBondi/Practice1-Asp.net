@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@RenderPage("Index.cshtml")

<h2 class="container pt-2 pb-2">@Tarea1.Global.Albumes.Count() Albumes <a title="Crear Album" class="btn btn-primary" href="~/CreateAlbum.aspx">+</a></h2>

<div class="container-sm border">
    <table class="table ">
        <tr class=" bg-primary text-white">
            <th>Id</th>

            <th>Nombre</th>

        </tr>

        @foreach (var item in Tarea1.Global.Albumes)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td><a class="btn btn-info" href="DetalleAlbum?id=@item.Id">Detalle</a></td>

            </tr>
        }
    </table>
</div>